                <% @itinerary.destinations.each do |destination|%>
                    <%= destination.name %>
                    <% end %>  
            </p>
      </div>

      <div class="row">
            <p>
              <strong>Start Date:</strong>
                <%= @itinerary.start_date.strftime("%b %d, %Y") %>
            </p>
      </div>

      <div class="row">
            <p>
              <strong>End Date:</strong>
                <%= @itinerary.end_date.strftime("%b %d, %Y") %>
            </p>
      </div>

      <div class="row"> 
          <%= link_to 'Edit', edit_itinerary_path(@itinerary), class: "btn btn-default" %> 
          <%= link_to 'Back', itineraries_path, class: "btn btn-default" %>
      </div>

